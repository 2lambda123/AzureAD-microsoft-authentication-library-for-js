{
  "compileOnSave": true,
  "compilerOptions": {
    "suppressImplicitAnyIndexErrors": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "target": "es6",
    "module": "system",
    "removeComments": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "outFile": "out/msal.js",
    "skipLibCheck":  true
  },
  "include": [
    "gulpfile.ts",
    "lib/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*Spec.js",
    "**/*.spec.ts"
  ]
}