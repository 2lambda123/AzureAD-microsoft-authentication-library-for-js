{
    "compilerOptions": {
        "moduleResolution": "node",
        "module": "commonjs",
        "target": "es5",
        "lib": [
            "es2015",
            "dom",
            "es2015.promise"
        ],
        "allowUnusedLabels": false,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "suppressImplicitAnyIndexErrors": true,
        "sourceMap": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "noImplicitAny": true,
        "types": [
            "node",
            "jest"
        ],
    },
    "include": [
        "**/test/*.spec.ts"
    ],
    "exclude": [
        "node_modules"
    ],
    "compileOnSave": false,
    "buildOnSave": false
}