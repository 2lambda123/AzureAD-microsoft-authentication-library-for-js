{
  "include": [
    "src",
    "test"
  ],
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "node",
    "lib": [
      "dom",
      "esnext"
    ],
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "rootDir": "./",
    "outDir": "./dist",
    "noUnusedLocals": true,
    "baseUrl": "./",
    "paths": {
      "*": [
        "src/*",
        "node_modules/*",
        "build/"
      ]
    },
    "jsx": "react",
    "esModuleInterop": true
  },
  "references": [
    {
      "path": "../../lib/msal-common"
    }
  ]
}